{
  "manifest_version": 3,
  "name": "Odds Comparison",
  "version": "1.0.0",
  "description": "Compare prediction market odds across Polymarket and Opinion",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://polymarket.com/*",
    "https://*.polymarket.com/*",
    "https://opinion.trade/*",
    "https://*.opinion.trade/*",
    "https://gamma-api.polymarket.com/*",
    "https://clob.polymarket.com/*",
    "https://api.opinion.trade/*"
  ],
  "background": {
    "service_worker": "src/background/background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://polymarket.com/*",
        "https://*.polymarket.com/*",
        "https://opinion.trade/*",
        "https://*.opinion.trade/*"
      ],
      "js": ["src/content/content.ts"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "public/icons/icon16.png",
      "48": "public/icons/icon48.png",
      "128": "public/icons/icon128.png"
    }
  },
  "icons": {
    "16": "public/icons/icon16.png",
    "48": "public/icons/icon48.png",
    "128": "public/icons/icon128.png"
  }
}
